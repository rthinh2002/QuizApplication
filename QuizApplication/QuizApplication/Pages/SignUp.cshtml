@page
@model QuizApplication.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<link rel="stylesheet" href="/QuizApplication.styles.css" />

<div class="text-center">
    <div class="login-container">
        <h2>Create an account</h2>
        <form method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="UserName" placeholder="User Name" required>
                <span asp-validation-for="@Model.User.UserName"></span>
            </div>  
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" id="email" name="UserEmail" placeholder="Email" required>
                <span asp-validation-for="@Model.User.UserEmail"></span>
            </div>
            <div class="form-group">
                <label for="password">Phone Number:</label>
                <input style="width: 100%" type="number" id="phone" name="Phone" placeholder="Phone Number" required>
                <span asp-validation-for="@Model.User.Phone"></span>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="HashPassword" placeholder="Password" required>
                <span asp-validation-for="@Model.User.HashPassword"></span>
            </div>
            <button type="submit">Sign Up</button>
        </form>
    </div>
</div>